{% extends '::base.html.twig' %}

{% block body -%}
    <div class="page-header">
        <h1>{{ 'map.title_index'|trans|raw }}</h1>
    </div>

    <div class="row">
        <div class="col-sm-12">

            <table class="table">
                <thead>
                <tr>
                    <th>{{ 'map.table.id'|trans }}</th>
                    <th>{{ 'map.table.name'|trans }}</th>
                    <th>{{ 'map.table.height'|trans }}</th>
                    <th>{{ 'map.table.width'|trans }}</th>
                    <th class="text-center">{{ 'map.table.action'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for map in maps %}
                    <tr>
                        <th scope="row">{{ map.id }}</th>
                        <td>
                            <a href="{{ path('map_show', {id: map.id }) }}">
                                {{ map.name }}
                            </a>
                        </td>
                        <td>{{ map.height }}</td>
                        <td>{{ map.width }}</td>
                        <td>
                            <div class="btn-group pull-right">
                                <a class="btn btn-success"
                                   href="{{ path('map_edit', {id : map.id} ) }}">
                                    {{ 'action.edit'|trans }}
                                </a>
                                <a class="btn btn-default"
                                   href="{{ path('map_construct', {id : map.id} ) }}">
                                    {{ 'map.table.action_construct'|trans }}
                                </a>
                                <a class="btn btn-danger"
                                   href="{{ path('map_edit', {id : map.id} ) }}">
                                    {{ 'action.delete'|trans }}
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                    <th>
                        <a href="{{ path('map_new') }}"
                           class="btn btn-primary pull-right" type="submit">
                            {{ 'map.form.new_map'|trans }}
                        </a>
                    </th>
                </tr>
                </tfoot>
            </table>

        </div>

    </div>
{% endblock %}
