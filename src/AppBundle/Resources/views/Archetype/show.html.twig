{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Archetype</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
            <tr>
                <th>Physicaldamage</th>
                <td>{{ entity.physicalDamage }}</td>
            </tr>
            <tr>
                <th>Magicdamage</th>
                <td>{{ entity.magicDamage }}</td>
            </tr>
            <tr>
                <th>Hitpoints</th>
                <td>{{ entity.hitPoints }}</td>
            </tr>
            <tr>
                <th>Magicpoints</th>
                <td>{{ entity.magicPoints }}</td>
            </tr>
            <tr>
                <th>Armor</th>
                <td>{{ entity.armor }}</td>
            </tr>
            <tr>
                <th>Magicresistance</th>
                <td>{{ entity.magicResistance }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('archetype') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('archetype_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
