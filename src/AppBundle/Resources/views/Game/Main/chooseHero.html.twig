{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1>{{ 'game.main.title_homepage'|trans }}</h1>
    </div>

    <div class="row">

        <h2>Choose Hero</h2>

        <div class="col-sm-6">

            <form method="POST" action="{{ path('game_main_update_choose_hero') }}">
                <ul>
                    {% for archetype in archetypes %}
                        <li>
                            <img data-src="holder.js/140x140" class="img-rounded" alt="140x140"
                                 src="data:image/svg+xml;base64,"
                                 data-holder-rendered="true" style="width: 140px; height: 140px;">

                            <span>{{ archetype.name }}</span>
                            <input type="radio" name="heroId" value="{{ archetype.id }}" />
                        </li>
                    {% endfor %}
                </ul>

                <input type="submit" value="{{ 'action.choose_hero'|trans }}" />
            </form>
        </div>


    </div>
{% endblock %}
